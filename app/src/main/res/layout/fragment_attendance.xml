<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AttendanceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/c1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_marginTop="20dp"
        android:padding="40dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Entrepreneurship"
                android:textSize="36sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="30dp"
                android:gravity="center">
                <Button
                    android:id="@+id/btn1Absent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Class"
                    android:textSize="8dp" />
                <View
                    android:layout_width="30dp"
                    android:layout_height="2dp"/>

                <Button
                    android:id="@+id/btn1Present"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attended"
                    android:textSize="8dp"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/c2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:elevation="10dp"
        android:padding="40dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Mobile Development"
                android:textSize="36sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="30dp"
                android:gravity="center">
                <Button
                    android:id="@+id/btn2Absent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Class"
                    android:textSize="8dp" />
                <View
                    android:layout_width="30dp"
                    android:layout_height="2dp"/>

                <Button
                    android:id="@+id/btn2Present"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attended"
                    android:textSize="8dp"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/c3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:elevation="10dp"
            android:padding="40dp"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Cloud Computing"
                    android:textSize="36sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="30dp"
                    android:gravity="center">
                    <Button
                        android:id="@+id/btn3Absent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Class"
                        android:textSize="8dp" />
                    <View
                        android:layout_width="30dp"
                        android:layout_height="2dp"/>

                    <Button
                        android:id="@+id/btn3Present"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attended"
                        android:textSize="8dp"/>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/c4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:elevation="10dp"
            android:padding="40dp"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="N-tier Architecture"
                    android:textSize="36sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="30dp"
                    android:gravity="center">
                    <Button
                        android:id="@+id/btn4Absent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Class"
                        android:textSize="8dp" />
                    <View
                        android:layout_width="30dp"
                        android:layout_height="2dp"/>

                    <Button
                        android:id="@+id/btn4Present"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attended"
                        android:textSize="8dp"/>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</FrameLayout>